<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerActivity">

    <TextView
            android:text="Ping Pong X"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="36sp" android:textColor="#4A73A2"
            android:textStyle="bold"/>
    <TextView
            android:text="Começar Partida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginTop="50dp" android:textColor="#000000" android:textSize="20sp"
            android:textAlignment="center"/>
    <TextView
            android:text="Preencha os Campos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" android:layout_marginTop="20dp"
            android:textAlignment="center" android:textSize="20sp" android:textColor="#000000"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etPlayer1" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginEnd="50dp" android:layout_marginStart="50dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etPlayer2" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/etPlayer1"
            app:layout_constraintEnd_toEndOf="@+id/etPlayer1" app:layout_constraintStart_toStartOf="@+id/etPlayer1"/>
    <Button
            android:text="Começar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStartGame" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4" android:textSize="18sp"/>
    <TextView
            android:text="Developemnt by Felipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:textAlignment="textEnd" android:textStyle="italic"
            android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>